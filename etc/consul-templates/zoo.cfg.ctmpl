tickTime=2000
initLimit=10
syncLimit=5
dataDir=/tmp/zookeeper/
clientPort=2181
{{$myid := env "MYID"}}{{range $i, $e := service "zookeeper@dc1" "any"}}{{range $t, $tag := $e.Tags}}{{if $tag |regexMatch "^[0-9]+$"}}server.{{$tag}}={{if eq $myid $tag}}0.0.0.0{{else}}{{$e.Address}}{{end}}:2888:3888{{end}}{{end}}
{{end}}
